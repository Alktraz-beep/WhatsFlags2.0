<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv_message_chat"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--BANDERAS-->
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--GREENFLAGS-->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GREEN"
                        android:textSize="18dp"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="@drawable/flags_green"
                        />
                    <TextView
                        android:id="@+id/tv_green_myflags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="18dp"
                        android:gravity="center"/>
                </LinearLayout>
                <!--REDFLAGS-->
                <LinearLayout
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RED"
                        android:textSize="18dp"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="@drawable/flags_red"
                        />
                    <TextView
                        android:id="@+id/tv_red_myflags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:textSize="18dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <!--MENSAJE DE REDFLAGS-->
            <TextView
                android:id="@+id/tv_mensajebanderas_myflags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HECHO POR RODSONDER Y ALKTRAZ"
                android:textSize="18dp"
                android:gravity="center"/>
            <!--MENSAJE DE LAPSO-->
            <TextView
                android:id="@+id/tv_mensajelapso_myflags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAPSO:15646"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>