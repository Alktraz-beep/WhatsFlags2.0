<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <!--DATOS USUARIO1 CON GRAFICA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_nom_mtotalespp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALKTRAZ"
            android:textSize="15dp"
            android:textColor="#128C7E"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_num_mtotalespp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="156343534"
            android:textSize="13dp"/>
    </LinearLayout>
    <!--GRAFICA 1-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="3dp">
        <ImageView
            android:id="@+id/iv_mtotalespp"
            android:layout_width="200dp"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/tv_pormtotalespp"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="60%"
