<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/linear_g_inicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_message_chat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!--AQUI VAN LOS PRIMEROS 3-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:text="¿Quién comienza la conversación?"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_nom1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="USUARIO1"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_veces1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VECES"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_nom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="USUARIO2"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_veces2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VECES2"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_nom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="USUARIO3"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_g_inicon_veces3"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VECES3"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <!--AQUI VIENE EL BOTON DE EXPANSION-->
        <LinearLayout
            android:id="@+id/layout_expandir_inicon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_g_inicon_flecha"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/rl_g_inicon_expandible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/lv_g_inicon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"/>
            <!--
            <ListView
                android:id="@+id/lv_g_inicon"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->

        </ScrollView>

    </LinearLayout>
</LinearLayout>