<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/linear_g_inicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/tv_message_chat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <!--TITULO -->
        <TextView
            android:id="@+id/tv_g_totales_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="18dp"
            android:text="Mensajes Totales: 33352313"/>
        <!--AQUI VAN LOS PRIMEROS 3-->
        <LinearLayout
            android:id="@+id/ll_g_totales_primeros3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

        </LinearLayout>
        <!--AQUI VIENE EL BOTON DE EXPANSION-->
        <LinearLayout
            android:id="@+id/layout_expandir_total1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_g_totales_flecha"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_baseline_arrow_drop_down_24"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/rl_g_totales_expandible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="10dp"
            >
            <LinearLayout
                android:id="@+id/lv_g_totales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"/>
            <!--
            <ListView
                android:id="@+id/lv_g_inicon"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>-->

        </ScrollView>

    </LinearLayout>
</LinearLayout>